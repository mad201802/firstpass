{
  "name": "firstpass",
  "version": "1.1.1",
  "main": "main.js",
  "license": "MIT",
  "author": "Firstpass",
  "description": "The best password manager in the world",
  "repository": {
    "type": "git",
    "url": "https://github.com/mad201802/firstpass.git"
  },
  "scripts": {
    "start": "electron ./main.js",
    "build": "webpack --config webpack.config.js --mode production",
    "dev": "concurrently \"webpack --config webpack.config.js --watch\" \"electronmon ./main.js\"",
    "dist": "electron-builder build",
    "dist:win": "yarn dist --win nsis --win zip",
    "dist:mac": "yarn dist --mac dmg --mac tar.gz",
    "dist:linux": "yarn dist --linux AppImage --linux tar.gz",
    "dist:win-lin": "yarn dist --linux AppImage --linux tar.gz --win nsis --win zip",
    "test": "jest"
  },
  "electronmon": {
    "patterns": [
      "app/build/**/*",
      "!**/*.html",
      "!app/src/**/*"
    ]
  },
  "build": {
    "appId": "firstpass",
    "productName": "Firstpass",
    "asar": true,
    "icon": "firstpass.ico",
    "directories": {
      "output": "../dist"
    },
    "win": {
      "icon": "firstpass.ico",
      "target": [
        "nsis",
        "zip"
      ],
      "requestedExecutionLevel": "asInvoker"
    },
    "mac": {
      "icon": "firstpass.icns",
      "target": [
        "dmg",
        "tar.gz"
      ]
    },
    "linux": {
      "icon": "firstpass.png",
      "target": [
        "AppImage",
        "tar.gz"
      ]
    },
    "nsis": {
      "uninstallDisplayName": "Firstpass",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "firstpass.ico"
    },
    "files": [
      "main.js",
      "preload.js",
      "util/**/*",
      "package.json",
      "app/build/**/*"
    ],
    "extraFiles": [
      {
        "from": "../backend/target/backend-1.1.1.jar",
        "to": "backend.jar"
      }
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/preset-env": "^7.19.4",
    "@babel/preset-react": "^7.18.6",
    "@emotion/react": "^11.10.4",
    "@emotion/styled": "^11.10.4",
    "@mui/icons-material": "^5.10.9",
    "@mui/material": "^5.10.9",
    "@svgr/webpack": "^6.5.0",
    "babel-loader": "^8.2.5",
    "concurrently": "^7.4.0",
    "css-loader": "^6.7.1",
    "electron": "^21.1.1",
    "electron-builder": "^23.6.0",
    "electronmon": "^2.0.2",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.4.1",
    "less": "^4.1.3",
    "less-loader": "^11.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "style-loader": "^3.3.1",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  }
}
